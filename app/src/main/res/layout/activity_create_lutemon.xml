<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Input for Lutemon Name -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Lutemon Name"
            android:inputType="textPersonName"
            android:layout_marginBottom="24dp"/>

        <!-- Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Lutemon Color:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <!-- Color Selection Group -->
        <RadioGroup
            android:id="@+id/colorRadioGroup"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- White -->
            <RadioButton android:id="@+id/rbWhite" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="White"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingBottom="16dp">
                <ImageView android:src="@drawable/lutemon_white" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginEnd="16dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Attack: 5\nDefense: 4\nHP: 20"/>
            </LinearLayout>

            <!-- Green -->
            <RadioButton android:id="@+id/rbGreen" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Green"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingBottom="16dp">
                <ImageView android:src="@drawable/lutemon_green" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginEnd="16dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Attack: 6\nDefense: 3\nHP: 19"/>
            </LinearLayout>

            <!-- Pink -->
            <RadioButton android:id="@+id/rbPink" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Pink"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingBottom="16dp">
                <ImageView android:src="@drawable/lutemon_pink" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginEnd="16dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Attack: 7\nDefense: 2\nHP: 18"/>
            </LinearLayout>

            <!-- Orange -->
            <RadioButton android:id="@+id/rbOrange" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Orange"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingBottom="16dp">
                <ImageView android:src="@drawable/lutemon_orange" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginEnd="16dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Attack: 8\nDefense: 1\nHP: 17"/>
            </LinearLayout>

            <!-- Black -->
            <RadioButton android:id="@+id/rbBlack" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Black"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingBottom="16dp">
                <ImageView android:src="@drawable/lutemon_black" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginEnd="16dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Attack: 9\nDefense: 0\nHP: 16"/>
            </LinearLayout>
        </RadioGroup>

        <!-- Create Button -->
        <Button
            android:id="@+id/btnCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Lutemon"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"/>

        <!-- Cancel Button -->
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:backgroundTint="#CCCCCC"
            android:textColor="#000000"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</ScrollView>
