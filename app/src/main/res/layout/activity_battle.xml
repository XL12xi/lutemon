<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F6F0FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BATTLE"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#4A00E0"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgA"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/lutemon_white"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/txtNameA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lutemon A"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtStatsA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stats A"
                    android:textSize="12sp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VS"
                android:textSize="18sp"
                android:layout_marginHorizontal="8dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgB"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/lutemon_black"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/txtNameB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lutemon B"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtStatsB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stats B"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txtBattleLog"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#FFFFFF"
            android:text="Battle log..."
            android:padding="8dp"
            android:layout_marginVertical="12dp"
            android:textSize="14sp"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/btnNextAttack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Attack"
            android:textColor="#FFFFFF"
            android:background="#6A00F4"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnEndBattle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Battle"
            android:backgroundTint="#DDDDDD"
            android:textColor="#333333" />

    </LinearLayout>
</ScrollView>
